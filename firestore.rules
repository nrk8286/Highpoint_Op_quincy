rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    function isManager() {
        let userRole = getUserRole(request.auth.uid);
        return userRole == 'Admin' || userRole == 'Supervisor' || userRole == 'Director' || userRole == 'Administrator';
    }

    function isMaintenance() {
        return getUserRole(request.auth.uid) == 'Maintenance';
    }

    function isClinicalStaff() {
      let userRole = getUserRole(request.auth.uid);
      return userRole == 'Nurse' || userRole == 'Director' || userRole == 'Administrator';
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId) || isManager();
    }

    match /daily_tasks/{taskId} {
      allow read: if isSignedIn();
      allow write: if isManager();
      allow update: if isSignedIn() && (isManager() || resource.data.assignedTo == request.auth.uid);
    }

    match /deep_clean_tasks/{taskId} {
        allow read: if isSignedIn();
        allow write: if isManager();
        allow update: if isSignedIn() && (isManager() || resource.data.assignedTo == request.auth.uid);
    }
    
    match /inventory/{itemId} {
      allow read: if isSignedIn();
      allow create, delete: if isManager();
      allow update: if isSignedIn();
    }

    match /maintenance_work_orders/{workOrderId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
        allow update: if isManager() || isMaintenance();
        allow delete: if isManager();
    }

    match /inspections/{inspectionId} {
      allow read: if isSignedIn();
      allow create: if isManager();
      allow update: if isManager();
      allow delete: if isManager();
    }

    match /residents/{residentId} {
      allow read, write: if isClinicalStaff();
    }

    match /shift_reports/{reportId} {
      allow read, write: if isClinicalStaff();
    }
  }
}

    