{
  "entities": {
    "User": {
      "title": "User",
      "description": "A user profile.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "role": { "type": "string", "enum": ["Admin", "Supervisor", "Housekeeper", "Director", "Administrator", "Maintenance", "Nurse"] },
        "avatarUrl": { "type": "string", "format": "uri" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "name", "email", "role", "createdAt"]
    },
    "DailyTask": {
      "title": "Daily Task",
      "description": "A daily cleaning task.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "roomNumber": { "type": "string" },
        "roomType": { "type": "string" },
        "assignedTo": { "type": "string" },
        "status": { "type": "string", "enum": ["Pending", "In Progress", "Completed", "Overdue", "Declined"] },
        "date": { "type": "string", "format": "date" },
        "notes": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["roomNumber", "roomType", "assignedTo", "status", "date", "createdAt", "updatedAt"]
    },
    "DeepCleanTask": {
      "title": "Deep Clean Task",
      "description": "A scheduled deep cleaning task.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "zone": { "type": "string" },
        "scheduledDate": { "type": "string", "format": "date" },
        "completedDate": { "type": "string", "format": "date" },
        "assignedTo": { "type": "string" },
        "status": { "type": "string", "enum": ["Scheduled", "In Progress", "Completed"] },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["zone", "scheduledDate", "assignedTo", "status", "createdAt", "updatedAt"]
    },
    "InventoryItem": {
      "title": "Inventory Item",
      "description": "An inventory item.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "category": { "type": "string" },
        "quantity": { "type": "number" },
        "reorderLevel": { "type": "number" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "category", "quantity", "reorderLevel", "createdAt", "updatedAt"]
    },
    "MaintenanceWorkOrder": {
      "title": "Maintenance Work Order",
      "description": "A maintenance work order ticket.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "location": { "type": "string" },
        "issueType": { "type": "string", "enum": ["Plumbing", "Electrical", "HVAC", "Painting", "General Repair"] },
        "description": { "type": "string" },
        "status": { "type": "string", "enum": ["Open", "In Progress", "Completed", "On Hold"] },
        "priority": { "type": "string", "enum": ["Low", "Medium", "High", "Urgent"] },
        "createdBy": { "type": "string" },
        "assignedTo": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["location", "issueType", "description", "status", "priority", "createdBy", "createdAt", "updatedAt"]
    },
    "Inspection": {
      "title": "Inspection",
      "description": "A quality control inspection for a room or area.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "location": { "type": "string" },
        "inspectorId": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "status": { "type": "string", "enum": ["Pass", "Fail", "Corrective Action Required"] },
        "notes": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["location", "inspectorId", "date", "status", "createdAt", "updatedAt"]
    },
    "Resident": {
      "title": "Resident",
      "description": "A resident of the facility.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "roomNumber": { "type": "string" },
        "dateOfBirth": { "type": "string", "format": "date" },
        "notes": { "type": "string" }
      },
      "required": ["id", "name", "roomNumber"]
    },
    "ShiftReport": {
      "title": "Shift Report",
      "description": "A nursing shift report.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "residentId": { "type": "string" },
        "authorId": { "type": "string" },
        "shift": { "type": "string", "enum": ["Day", "Evening", "Night"] },
        "date": { "type": "string", "format": "date-time" },
        "reportText": { "type": "string" }
      },
      "required": ["id", "residentId", "authorId", "shift", "date", "reportText"]
    }
  },
  "auth": {
    "providers": ["email-password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/User" },
      "description": "User profile documents."
    },
    "/daily_tasks/{taskId}": {
      "schema": { "$ref": "#/entities/DailyTask" },
      "description": "Collection of all daily tasks."
    },
    "/deep_clean_tasks/{taskId}": {
        "schema": { "$ref": "#/entities/DeepCleanTask" },
        "description": "Collection of all deep clean tasks."
    },
    "/inventory/{itemId}": {
      "schema": { "$ref": "#/entities/InventoryItem" },
      "description": "Collection of all inventory items."
    },
    "/maintenance_work_orders/{workOrderId}": {
      "schema": { "$ref": "#/entities/MaintenanceWorkOrder" },
      "description": "Collection of all maintenance work orders."
    },
    "/inspections/{inspectionId}": {
      "schema": { "$ref": "#/entities/Inspection" },
      "description": "Collection of all quality control inspections."
    },
    "/residents/{residentId}": {
      "schema": { "$ref": "#/entities/Resident" },
      "description": "Collection of all residents."
    },
    "/shift_reports/{reportId}": {
      "schema": { "$ref": "#/entities/ShiftReport" },
      "description": "Collection of all nursing shift reports."
    }
  }
}

    